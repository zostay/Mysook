use v6;

program {
    .fun: "throb-red", {
        .set-urgency: 1;
        .set-foreground: 0xFF0000;
        .fill;

        .loop: -> $_, *% {
            .tick-mode: MODE_BRIGHTNESS, (
                0x00, 0x11, 0x22, 0x33, 0x44, 0x55, 0x66, 0x77,
                0x88, 0x99, 0xAA, 0xBB, 0xCC, 0xDD, 0xEE, 0xFF,
                0xFF, 0xEE, 0xDD, 0xCC, 0xBB, 0xAA, 0x99, 0x88,
                0x77, 0x66, 0x55, 0x44, 0x33, 0x22, 0x11
            );
        };
    }

    .start: "throb-red";
}
